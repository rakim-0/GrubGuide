<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrubGuide - All Restaurants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            text-align: center;
            background-size: 100% 120%;
        }

        h1 {
            font-family: helvetica;
            margin-top: 5rem;
            font-size: 4rem;
        }

        .restaurant-card {
            margin-bottom: 20px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar partial would go here -->
    <%- include('partials/navbar') %>

        <main class="flex-grow-1 pt-5 container">
            <h1>GrubGuide</h1>
            <h2>All Restaurants</h2>

            <div class="row mt-5">
                <% restaurants.forEach(function(restaurant) { %>
                    <div class="col-md-4 restaurant-card">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= restaurant.name %>
                                </h5>
                                <p class="card-text">
                                    <%= restaurant.address %>
                                </p>
                                <p class="card-text">Rating: <%= restaurant.average_ratings %> (<%=
                                            restaurant.total_ratings %> reviews)</p>
                                <p class="card-text">Open: <%= restaurant.open_time %> - <%= restaurant.closing_time %>
                                </p>
                                <a href="#" class="btn btn-dark">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </main>

        <!-- Footer partial would go here -->
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>