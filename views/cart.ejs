<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>GrubGuide - Cart</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <style>
            .cart-image {
                max-width: 100px;
                max-height: 100px;
                object-fit: cover;
            }
        </style>
    </head>

    <body class="d-flex flex-column min-vh-100">
        <%- include('partials/navbar') %>

        <main class="flex-grow-1 container py-5">
            <h1 class="mb-4">Your Cart</h1>
            <% if (dishes && dishes.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total = 0; %> <% dishes.forEach(function(dish) { %>
                        <tr data-dish-id="<%= dish.id %>">
                            <td>
                                <img
                                    src="<%= dish.image%>"
                                    alt="<%= dish.name %>"
                                    class="cart-image"
                                />
                            </td>
                            <td><%= dish.name %></td>
                            <td><%- dish.description %></td>
                            <td id="price">₹ <%= dish.price %></td>
                            <td>
                                <input
                                    id="quantity-input"
                                    type="number"
                                    value="<%= dish.count %>"
                                />
                            </td>
                            <% const subtotal = (dish.price * (dish.count || 1)); %> <%
                            total += subtotal; %>
                            <td id="subtotal">₹ <%= subtotal.toFixed(2) %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-end">
                                <strong>Total:</strong>
                            </td>
                            <td id="cartTotal">₹ <%= total.toFixed(2) %></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="text-end mt-4">
                <button id="checkoutBtn" class="btn btn-primary black btn-lg">
                    Proceed to Checkout
                </button>
            </div>
            <% } else { %>
            <div class="alert alert-info" role="alert">
                Your cart is empty.
                <a href="/menu" class="alert-link">Browse our menu</a> to add some
                delicious dishes!
            </div>
            <% } %>
        </main>

        <%- include('partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                function updateTotal() {
                    const rows = document.querySelectorAll("tr[data-dish-id]");
                    let total = 0;
                    rows.forEach((row) => {
                        const subtotal = row
                            .querySelector("#subtotal")
                            .textContent.trim()
                            .slice(2);
                        total += Number(subtotal);
                    });
                    document.querySelector("#cartTotal").innerText = `₹ ${total.toFixed(
                        2
                    )}`;
                }
                if (checkoutBtn) {
                    checkoutBtn.addEventListener("click", function () {
                        alert("Proceeding to checkout...");
                    });
                }
                const rows = document.querySelectorAll("tr[data-dish-id]");
                rows.forEach((row) => {
                    const numberInput = row.querySelector("input");
                    let previousValue = numberInput.value;
                    numberInput.addEventListener("input", (e) => {
                        const currentValue = parseInt(e.target.value);
                        if (currentValue < 0) {
                            row.querySelector("input").innerText = 0;
                            // alert('Please don\'t try to reduce the quantity anymore.');
                            return;
                        }
                        const data = {
                            userId: "<%= userId %>",
                            dishId: row.getAttribute("data-dish-id"),
                            count: currentValue,
                        };
                        fetch("/api/cart/<%= userId %>", {
                            method: "PATCH",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify(data),
                        })
                            .then((response) => response.json())
                            .then((data) => {
                                if (data) {
                                    // alert("dish updated successfully");
                                    const price = row.querySelector("#price");
                                    const subtotal =
                                        Number(price.textContent.slice(2)) *
                                        Number(currentValue);
                                    row.querySelector(
                                        "#subtotal"
                                    ).textContent = `₹ ${subtotal.toFixed(2)}`;
                                    updateTotal();
                                }
                            })
                            .catch((error) => {
                                if (data) {
                                    alert(error);
                                }
                                console.error(error);
                            });
                    });
                });
            });
        </script>
    </body>
</html>
