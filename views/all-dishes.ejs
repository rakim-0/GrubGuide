<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrubGuide - All Dishes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            text-align: center;
            background-size: 100% 120%;
        }

        h1 {
            font-family: helvetica;
            margin-top: 5rem;
            font-size: 4rem;
        }

        .dish-card {
            margin-bottom: 20px;
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .dish-description {
            flex-grow: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-box-orient: vertical;
        }

        .btn-group {
            margin-top: auto;
        }

        .btn-black {
            color: #fff;
            background-color: #000;
            border-color: #000;
        }

        .btn-black:hover {
            color: #fff;
            background-color: #333;
            border-color: #333;
        }

        .btn-outline-black {
            color: #000;
            border-color: #000;
        }

        .btn-outline-black:hover {
            color: #fff;
            background-color: #000;
            border-color: #000;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/navbar') %>
        <h1>All Dishes</h1>

        <main class="flex-grow-1 pt-5 container">
            <div class="row mt-5">
                <% dishes.forEach(function(dish) { %>
                    <div class="col-md-4 dish-card">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= dish.name %>
                                </h5>
                                <div class="card-text dish-description">
                                    <%- dish.description || 'No description available' %>
                                </div>
                                <p class="card-text">Price: â‚¹<%= dish.price.toFixed(2) %>
                                </p>
                                <p class="card-text">Restaurant: <%= dish.Restaurant ? dish.Restaurant.name : 'Unknown'
                                        %>
                                </p>
                                <div class="btn-group w-100" role="group">
                                    <a href="#" class="btn btn-outline-black">Add to Cart</a>
                                    <a href="#" class="btn btn-black">Order Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </main>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>