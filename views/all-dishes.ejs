<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrubGuide - All Dishes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            text-align: center;
            background-size: 100% 120%;
        }

        h1 {
            font-family: helvetica;
            margin-top: 5rem;
            font-size: 4rem;
        }

        .dish-card {
            margin-bottom: 20px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/navbar') %>

        <main class="flex-grow-1 pt-5 container">
            <h1>GrubGuide</h1>
            <h2>All Dishes</h2>

            <div class="row mt-5">
                <% dishes.forEach(function(dish) { %>
                    <div class="col-md-4 dish-card">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= dish.name %>
                                </h5>
                                <div class="card-text dish-description">
                                    <%- dish.description || 'No description available' %>
                                </div>
                                <p class="card-text">Price: â‚¹<%= dish.price.toFixed(2) %>
                                </p>
                                <p class="card-text">Restaurant: <%= dish.Restaurant ? dish.Restaurant.name : 'Unknown'
                                        %>
                                </p>
                                <a href="#" class="btn btn-dark">View Details</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </main>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>